<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    android:gravity = "center"
    tools:context="motionlogger.jennychen.com.activitypal.MainActivity">

    <TextView
    android:id= "@+id/convert"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text= "Convert"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <EditText
        android:id= "@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:hint="Enter Input"
        android:inputType="number"
        android:layout_below="@+id/convert"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id= "@+id/input_unit"
        android:layout_width="100dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp" />

    <Spinner
        android:id= "@+id/activities"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_width = "wrap_content"
        android:layout_toRightOf= "@+id/input_unit"/>

    <TextView
        android:id= "@+id/into"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text = "Into"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/activities"
        android:textStyle="bold" />


    <Spinner
        android:id= "@+id/result_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/into"
        android:textAlignment="center"
        />

    <Button
        android:id= "@+id/convert_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text = "Convert Now"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/result_type" />

    <TextView
        android:id= "@+id/resultDisplay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text = "Results"
        android:textSize = "30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor = "@color/colorPrimary"
        android:layout_below="@+id/convert_btn" />

    <TextView
        android:id= "@+id/result_unit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text = "reps"
        android:textColor = "@color/colorPrimaryDark"
        android:textSize = "20dp"
        android:textAlignment="center"
        android:layout_below="@+id/resultDisplay" />




</RelativeLayout>
